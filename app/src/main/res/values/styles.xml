<resources>


    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <!-- Base application theme. -->
    <style name="home_bottom_style" >
        <!-- Customize your theme here. -->
        <item name="android:layout_width" >0dp</item>
        <item name="android:layout_weight" >1</item>
        <item name="android:layout_height" >wrap_content</item>
        <item name="android:background" >@null</item>
        <item name="android:button" >@null</item>
        <item name="android:gravity" >center</item>
        <item name="android:textColor" >@color/home_botton_text_selector</item>
        <item name="android:textSize" >18sp</item>
        <item name="android:singleLine" >true</item>
        <item name="android:scaleX" >0.6</item>
        <item name="android:scaleY" >0.6</item>
        <item name="android:padding" >0dp</item>
        <item name="android:drawablePadding" >0dp</item>

    </style>


    <style name="StyledIndicators" parent="@android:style/Theme.Light">
        <item name="vpiTabPageIndicatorStyle">@style/CustomTabPageIndicator</item>
    </style>

    <style name="CustomTabPageIndicator" parent="Widget.TabPageIndicator">
        <item name="android:background">@drawable/custom_tab_indicator</item>
        <item name="android:textAppearance">@style/CustomTabPageIndicator.Text</item>
        <item name="android:textColor">@drawable/custom_tab_text_color_indicator</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingLeft">18dp</item>
        <item name="android:paddingRight">18dp</item>
        <item name="android:fadingEdge">horizontal</item>
        <item name="android:fadingEdgeLength">8dp</item>
    </style>

    <style name="CustomTabPageIndicator.Text" parent="android:TextAppearance.Medium">
        <item name="android:typeface">monospace</item>
    </style>


</resources>
